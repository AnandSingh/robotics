{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run-on-my-robot",
            "type": "shell",
            "command": "pybricksdev",
            "args": [
                "run",
                "ble",
                "--name",
                "Jolly",
                "${file}"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*)File(.*)(C:(.*)\\.py)(.*)(line(\\s*))([0-9]+),",
                    "file": 3,
                    "line": 8
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "Run master_program.py on my robot",
            "type": "shell",
            "command": "pybricksdev",
            "args": [
                "run",
                "ble",
                "--name",
                "${env:robotName}",
                "master_program.py"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*)File(.*)(C:(.*)\\.py)(.*)(line(\\s*))([0-9]+),",
                    "file": 3,
                    "line": 8
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "git pull on startup",
            "type": "shell",
            "command": "python ${fileWorkspaceFolder}\\.vscode\\gitpull.py",
            "windows": {
                "command": "python ${fileWorkspaceFolder}\\.vscode\\gitpull.py"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "Run on alt robot",
            "type": "shell",
            "command": "pybricksdev",
            "args": [
                "run",
                "ble",
                "--name",
                "${input:robotName}",
                "${file}"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*)File(.*)(C:(.*)\\.py)(.*)(line(\\s*))([0-9]+),",
                    "file": 3,
                    "line": 8
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "Run master_program.py on alt robot",
            "type": "shell",
            "command": "pybricksdev",
            "args": [
                "run",
                "ble",
                "--name",
                "${input:robotName}",
                "master_program.py"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*)File(.*)(C:(.*)\\.py)(.*)(line(\\s*))([0-9]+),",
                    "file": 3,
                    "line": 8
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "robotName",
            "description": "Which Robot?",
            "options": [
                "Jolly",
                "Wally"
            ]
        }
    ]
}